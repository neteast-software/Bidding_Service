<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neteast.business.mapper.ItemTemplateMapper">

    <select id="getList" resultType="com.neteast.business.domain.template.ItemTemplate" parameterType="com.neteast.business.domain.template.ItemTemplate">
        select
        id,item_name,item_type,value_type,value,create_by,create_time,update_by,update_time
        from item_template
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="itemName != null and itemName != ''">
                and item_name like '%'||#{itemName}||'%'
            </if>
            <if test="itemType != null and itemType != ''">
                and item_type = #{itemType}
            </if>
            <if test="valueType != null and valueType != ''">
                and value_type = #{valueType}
            </if>
            <if test="value != null and value != ''">
                and value = #{value}
            </if>
        </where>
    </select>
</mapper>